{% extends 'base.html.twig' %}

{% block title %}Following index{% endblock %}

{% block body %}
    <h1>Following index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for following in followings %}
            <tr>
                <td>{{ following.id }}</td>
                <td>
                    <a href="{{ path('following_show', {'id': following.id}) }}">show</a>
                    <a href="{{ path('following_edit', {'id': following.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('following_new') }}">Create new</a>
{% endblock %}
